pipeline {
    agent any

    parameters {
        choice(
            name: 'MODE',
            choices: ['apply', 'destroy'],
            description: 'Choose Terraform operation mode'
        )
    }

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = 'us-east-1'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/0xDAYZ/TF-EKS-JENKINS.git']]
                )
            }
        }

        stage('Get Deployment Details') {
           steps {
                script {
                    def userInput = input(
                        message: 'Please provide the deployment details for the cluster:',
                        parameters: [
                            string(name: 'CLUSTER_NAME', defaultValue: 'demo-cluster'),
                            string(name: 'CLUSTER_REGION', defaultValue: 'us-east-1'),
                            string(name: 'CLUSTER_NODEPOOL_MIN_SIZE', defaultValue: '1'),
                            string(name: 'CLUSTER_NODEPOOL_MAX_SIZE', defaultValue: '2'),
                            string(name: 'CLUSTER_NODEPOOL_DESIRED_SIZE', defaultValue: '1')
                        ]
                    )

                    env.TF_VAR_region                    = userInput.CLUSTER_REGION
                    env.TF_VAR_cluster_name              = userInput.CLUSTER_NAME
                    env.TF_VAR_eks_nodepool_min_size     = userInput.CLUSTER_NODEPOOL_MIN_SIZE
                    env.TF_VAR_eks_nodepool_max_size     = userInput.CLUSTER_NODEPOOL_MAX_SIZE
                    env.TF_VAR_eks_nodepool_desired_size = userInput.CLUSTER_NODEPOOL_DESIRED_SIZE
                    env.AWS_DEFAULT_REGION               = userInput.CLUSTER_REGION
                }
            }
        }

        stage('Initialize Terraform') {
            steps {
                dir('eks-deployment') {
                    sh 'terraform init'
                }
            }
        }

        stage('Validate Terraform') {
            when {
                expression { params.MODE == 'apply' }
            }
            steps {
                dir('eks-deployment') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            when {
                expression { params.MODE == 'apply' }
            }
            steps {
                dir('eks-deployment') {
                    sh 'terraform plan'
                }
                input(message: 'Proceed with terraform apply?', ok: 'Apply')
            }
        }

        stage('Modify Infrastructure') {
            steps {
                dir('eks-deployment') {
                    sh "terraform ${params.MODE} -auto-approve"
                }
            }
        }
    }
}

